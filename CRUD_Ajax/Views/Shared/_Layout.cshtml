<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRUD_Ajax</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/css/materialize.css" />
        <link rel="stylesheet" href="~/css/contact.css" />
        <link rel="stylesheet" href="~/css/sidebar.css" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/materialize.css" />
        <link rel="stylesheet" href="~/css/contact.css" />
        <link rel="stylesheet" href="~/css/sidebar.css" />
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    </environment>
</head>
<body>
<input type="hidden" id="baseUrl" value="@Url.ActionContext.HttpContext.Request.Host.Value"/>
    @* Nav bar *@
    <div class="navbar-fixed">
        <nav>
            <div class="nav-wrapper">
                <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <a href="#" class="brand-logo">Contacts</a>
            </div>
        </nav>
    </div>

    @* Side Panel *@
    <ul id="slide-out" class="sidenav sidenav-fixed invesible-top">
        <li><a class="waves-effect waves-light " href="#!">Arghya's Contacts</a></li>
        <li><a class="waves-effect waves-light  modal-trigger" href="#contactForm"><i class="material-icons left">add</i>Add Contact</a></li>
    </ul>


    <main>
        @RenderBody()
    </main>

    @* Contact Modal *@
    <div id="contactForm" class="modal modal-fixed-footer">
        <div class="modal-content">
            <div class="row">
                <form class="col s12" id="contact_form">
                    <input id="Id" type="hidden" value="0">
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="first_name" type="text" class="validate">
                            <label id="first_name_label" for="first_name">First Name</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="last_name" type="text" class="validate">
                            <label id="last_name_label" for="last_name">Last Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="phone_number" type="number" class="validate">
                            <label id="phone_number_label" for="phone_number">Phone Number</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6">
                            <input id="dob" type="text" class="validate datepicker">
                            <label id="dob_label" for="dob">Birthday</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="email" type="email" class="validate">
                            <label id="email_label" for="email">Email</label>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#!" class="modal-close waves-effect waves-green btn-flat">Cancel</a>
            <a onclick="addContact()" id="submit_button" class="waves-effect waves-green btn-flat">Add</a>
        </div>
    </div>


    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/materialize.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
        <script src="~/js/CRUDAjax.js"></script>
        <script src="~/js/contact.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="~/js/materialize.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
        <script src="~/js/CRUDAjax.js"></script>
        <script src="~/js/contact.js"></script>

        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>


    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
